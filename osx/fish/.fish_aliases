# Quicker navigation
alias .. "cd .."
alias ... "cd ../.."
alias .... "cd ../../.."
alias ..... "cd ../../../.."
alias q "exit"
alias cl "clear"

# Development shortcuts
alias es "ember server"
alias et "ember exam --split=4 --parallel --random"
alias ets "ember exam --server --random"
alias fs "foreman start"
alias er "rm -rf node_modules bower_components tmp dist; yarn install; bower install"

# Folder shortcuts
alias workspace "cd ~/workspace"
alias ws "cd ~/workspace"

# Enable aliases to be sudo'ed
alias sudo "sudo"

# Git aliases
alias gf "git fetch"
alias gfo "git fetch origin"
alias gfp "git fetch --prune"
alias gs "git status"
alias ga "git add -A"
alias gap "git add -p"
alias go "git checkout"
alias gb "git branch"
alias gbr "git branch -r"
alias gr "git rebase"
alias gl "git log --graph --oneline --decorate"
alias psh "git push origin"
alias pll "git pull origin"
alias cm "git commit"
alias cmam "git commit --amend"
alias cmm "git commit -m"
alias cmma "git commit -am"
